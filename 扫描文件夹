package yt;

import java.io.File;
import java.io.FilenameFilter;
import java.util.List;

public class ExecCmd {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		File file = new File("c:/");
		ExecCmd e = new ExecCmd();
		String[] files = e.scanFiles(file, new FilenameFilter() {
			
			@Override
			public boolean accept(File dir, String name) {
				// TODO Auto-generated method stub
				return name.contains(".class");
			}
		});
		
		for(String fileName : files){
			System.out.println(fileName);
		}
	}

	/**
	 * 获取目录下所有满足过滤条件的文件名
	 * @param directory 输入要扫描的文件夹
	 * @param filter 过滤文件
	 * @return
	 */
	private String[] scanFiles(File directory, FilenameFilter filter){
		String[] files = null;
		if(!directory.isDirectory()){
			throw new IllegalArgumentException("请输入文件夹");
		}
		files = directory.list(filter);
		return files;
	}
}
